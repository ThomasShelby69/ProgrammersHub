<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Server Settings</title>

    <link rel="icon" href="/img/icon.png" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.css" rel="stylesheet" />
    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="/css/dashboard.css">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"></script>
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Dashboard -->
    <script src="/js/dashboard.js"></script>
</head>

<body>
    <!--Main Navigation-->
    <header>
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-dark">
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    <br>
                    <a href="#" class="list-group-item list-group-item-action py-2 ripple active" aria-current="true">
                        <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Dashboard</span>
                    </a>
                    <hr>
                    <a href="#" class="bg-danger list-group-item list-group-item-action py-2 ripple"><i
                            class="fas fa-lock fa-fw me-3"></i><span>Moderation</span>
                    </a>
                    <hr>
                    <a href="#" class="bg-warning list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-chart-area fa-fw me-3"></i><span>Logging</span>
                    </a>
                    <hr>
                </div>
            </div>
        </nav>
        <!-- Sidebar -->

        <!-- Navbar -->
        <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-dark fixed-top">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#sidebarMenu"
                    aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand" href="#">
                    <img src="/img/icon.png" height="50" alt="" loading="lazy" />
                    <h3 class="text-white">Dashboard</h3>
                </a>

                <!-- Right links -->
                <ul class="navbar-nav ms-auto d-flex flex-row">
                    <!-- Avatar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#"
                            id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                            <img src="https://cdn.discordapp.com/avatars/<%-userid%>/<%-avatar%>.png?size=80"
                                class="rounded-circle" height="50" alt="" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li>
                                <h6><a class="dropdown-item" href="/">Home</a></h6>
                            </li>
                            <li>
                                <h6><a class="dropdown-item" href="/dashboard#servers">My Servers</a></h6>
                            </li>
                            <li>
                                <h6><a class="dropdown-item" href="/auth/logout">Logout</a></h6>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <!--Main Navigation-->

    <!--Main layout-->
    <main style="margin-top: 58px">
        <div class="container pt-4">
            <br>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Server Info</h5>
                            <p class="card-text">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Members
                                    <span class="badge bg-primary rounded-pill">
                                        <%-guilddetails.members%>
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Categories
                                    <span class="badge bg-primary rounded-pill">
                                        <%-guilddetails.category%>
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Text Channels
                                    <span class="badge bg-primary rounded-pill">
                                        <%-guilddetails.textchannels%>
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Voice Channels
                                    <span class="badge bg-primary rounded-pill">
                                        <%-guilddetails.voicechannels%>
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Roles
                                    <span class="badge bg-primary rounded-pill">
                                        <%-guilddetails.roles%>
                                    </span>
                                </li>
                            </ul>
                            </p>
                            <a class="btn btn-danger" data-mdb-toggle="tooltip" title="<%-guilddetails.server%>"
                                onclick="copyserverid('<%-guilddetails.server%>')" id="copyserverid" role="button">
                                <i class="fas fa-copy me-2"></i>
                                Copy Server ID
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Updates</h5>
                            <p class="card-text">Coming Soon
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-4">
                    <form method="post">
                        <div class="row mb-4">
                            <div class="col-8">
                                <input class="form-control" type="text" name="prefix" id="prefix" value="<%-guildprefix%>">
                            </div>
                            <div class="col-4">
                                <input class="btn btn-primary btn-block mb-4" type="submit" value="Submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!--Main layout-->

    <div class="toast align-items-center text-white bg-primary border-0" role="alert" aria-live="assertive"
        aria-atomic="true" style="position: absolute; margin-right:0.25rem; bottom: 20px; right: 10px;">
        <div class="d-flex">
            <div class="toast-body">
                Copied Server ID to clipboard.
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                aria-label="Close"></button>
        </div>
    </div>
</body>

</html>